[user]
  name = Thanh Hai Mai
  email = thanhhaipmai@gmail.com
[credential]
  helper = cache
[color]
  status = auto
  branch = auto
  ui = auto
  diff = auto
[alias]
  co = checkout
  c = commit -v
  ci = commit -v
  l = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ll = log --all --graph --color --stat --abbrev-commit --decorate --oneline
  lll = log --all --graph --color --stat --all --decorate
  d = diff -p --stat --unified=8 --color --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
  di = diff -p --stat --unified=8 --color
  ri = rebase -i
  assume = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
  ds = stash show -p stash@{0}
  ds1 = stash show -p stash@{1}
  ds2 = stash show -p stash@{2}
  d1 = d HEAD~1
  d2 = d HEAD~2
  d3 = d HEAD~3
[core]
  excludesfile = /home/mai/.gitignore_global
[diff]
	algorithm = patience
